<div class="jumbotron">
  <h2 class="centeralign"> Edit Your Bar </h2>

  <%= form_for @bar, html: {multipart: true} do |f|  %>

    <% if @bar.errors.any? %>
      <div>
        <h4 class="text-danger"> <%= pluralize(@bar.errors.count, "error") %> prevented you from signing up!</h4>
        <ul class="list-group">
          <% @bar.errors.full_messages.each do |msg| %>
            <li class="list-group-item list-group-item-danger">
              <%= msg.downcase %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <form class="form-inline">
      <div class="input-group">
        <div class="input-group-addon">Bar Name</div>
        <%= f.text_field :bar_name, class: "form-control", placeholder: "Add Bar Name Here" %>
      </div>
      <br>
      <br>
      <div class="input-group">
        <div class="input-group-addon">Address</div>
        <%= f.text_area :location, class: "form-control", placeholder: "Add Bar Address here" %>
      </div>
      <br>
      <br>
      <div class="input-group">
        <div class="input-group-addon">Zip Code</div>
        <%= f.number_field :zip, class: "form-control", :step => 'any', placeholder: "Add Zip Code Here" %>
      </div>
      <br>
      <br>
      <div class="input-group">
        <div class="input-group-addon">Day</div>
        <%= f.text_field :day, class: "form-control", placeholder: "Add Day(s) of Happy Hour" %>
      </div>
      <br>
      <br>
      <div class="input-group">
        <div class="input-group-addon">Time</div>
        <%= f.text_field :time, class: "form-control", placeholder: "Add Happy Hour Timings" %>
      </div>
      <br>
      <br>
      <div class="input-group">
        <div class="input-group-addon">Summary</div>
        <%= f.text_area :description, class: "form-control", placeholder: "Add A Description About Your Bar" %>
      </div>
      <br>
      <br>
      <div class="input-group">
        <div class="input-group-addon">Image</div>
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <br>
      <br>
      <div class="centeralign">
      <%= f.submit "Update Bar", class: "btn btn-lg btn-default spacer" %>

    <%= link_to "Delete Bar", delete_bar_path(@bar), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-lg btn-danger spacer" %>
  </div>
    <br>
    <br>
  <% end %>
</div>
