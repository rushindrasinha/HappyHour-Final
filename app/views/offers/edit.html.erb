<div class="jumbotron">
  <h2 class="centeralign"> Edit Your Offer </h2>

  <%= form_for @offer, html: {multipart: true} do |f|  %>
      <% if @offer.errors.any? %>
        <div>
          <h4 class="text-danger"> <%= pluralize(@offer.errors.count, "error") %> prevented you from signing up!</h4>
          <ul class="list-group">
            <% @offer.errors.full_messages.each do |msg| %>
              <li class="list-group-item list-group-item-danger">
                <%= msg.downcase %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>


      <br>
      <form class="form-inline">
      <div class="input-group">
        <div class="input-group-addon">Item</div>
        <%= f.text_field :item, class: "form-control", placeholder: "Add Item Name Here" %>
      </div>
      <br>
      <br>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <%= f.number_field :price, class: "form-control", :step => 'any', placeholder: "Add Price Here" %>
        </div>
      </div>
      <br>
      <br>
      <div class="input-group">
        <div class="input-group-addon">Summary</div>
        <%= f.text_area :description, class: "form-control", placeholder: "Describe Offer Here" %>
      </div>
    <br>
    <br>
    <div class="input-group">
      <div class="input-group-addon">Image</div>
      <%= f.file_field :image, class: "form-control", :step => 'any', placeholder: "Price" %>
    </div>
    <br>
    <br>
    <div class="centeralign">
      <%= f.submit "Update Offer", class: "spacer btn btn-lg btn-default" %>
      <%= link_to "Delete Offer", delete_offer_path(@offer), method: :delete, data: {confirm: "Are you sure?"}, class: "spacer btn btn-lg btn-danger" %>
    </div
      <br>
      <br>
  <% end %>
</div>
