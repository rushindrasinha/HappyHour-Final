<div class="jumbotron">
  <h2 class='centeralign'> Add an offer to your Bar </h2>

  <%= form_for [@bar, @offer], html: {multipart: true} do |f|  %>

        <% if @offer.errors.any? %>
          <div>
            <h4 class="text-danger"> <%= pluralize(@offer.errors.count, "error") %> prevented you from signing up!</h4>
            <ul class="list-group">
              <% @offer.errors.full_messages.each do |msg| %>
                <li class="list-group-item list-group-item-danger">
                  <%= msg.downcase %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>

  <form class="form-inline">
    <div class="form-group">
      <%= f.label :item %>
      <%= f.text_field :item, class: "form-control" %>
    </div>
      <br>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">$</div>
            <%= f.number_field :price, class: "form-control", :step => 'any', placeholder: "Price" %>
          </div>
        </div>

      <br>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", size: "25x15" %>
    </div>
      <br>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control" %>
    </div>
      <br>

      <%= f.submit "Add This Offer!", class: "btn btn-lg btn-default" %>
    </form>
  <% end %>
</div>
