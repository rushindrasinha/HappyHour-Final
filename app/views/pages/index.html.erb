      <!-- <h2 class="centeralign headshade">List of all Bars and Happy Hours + Offers</h2> -->
<section>
      <% @bars.each do |bar| %>
        <div class="barlistself">
          <p><h3><span class="titleshade"><%= bar.bar_name %></span></h3></p>
          <br>
          <p><%= image_tag bar.image.url(:medium), class: "responsive-self" %></p>
          <p><strong>Location : </strong><a target="_blank" href="/map"><%= bar.location %></p></a>
          <p><strong>Zip Code : </strong><%= bar.zip %></p>
          <p><strong>Happy Hour Day(s) : </strong><%= bar.day %></p>
          <p><strong>Happy Hour Timings : </strong><%= bar.time %></p>
          <p><strong>Summary : </strong><%= bar.description %></p>
            <% bar.offers.each do |offer| %>
            <div class="offerlist">
              <p><%= image_tag offer.image.url(:thumb), class: "responsive-self" %></p>
              <p><strong>Item : </strong><%= offer.item %></p>
              <p><strong>Price : </strong>$<%= offer.price %></p>
              <p><strong>Details : </strong><%= offer.description %></p>
            </div>
            <% end %>
        </div>
      <% end %>
</section>
          <div class="barlistself centeralign">
            <%= will_paginate @bars, renderer: BootstrapPagination::Rails %>
          </div>

