<div class="jumbotron">
  <h2>Log In</h2>
  <br>
  <%= form_for :login do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <br>
    <div class="form-group">
      <%= f.submit 'Log In', class: "btn btn-default" %>
    </div>
    <br>
  <% end %>
</div>